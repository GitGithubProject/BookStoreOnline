<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link asp-href-include="~/lib/bootstrap/dist/css/CustomizedStyle.css" rel="stylesheet" />
    <link rel="stylesheet" asp-href-include="~/lib/fontawesome/css/*.css" />
    <title>BooksStore</title>
    <style>
        .bg-inverse {
            background-color:green;
        }
        .navbar-inverse .navbar-text {
            font-weight: bold;
            font-size: medium;
            color: black;
        }
        
    </style>
</head>
    <body>
        <div class="container-fluid">

            
                <div class="navbar navbar-inverse bg-inverse" role="navigation">
                    <div class="row">
                        <a class="col navbar-brand" href="#">
                            SPORTS STORE
                        </a>

                        @* Now that I have a view component and a view, I can modify
                the shared layout so that the cart summary
                is included in the responses generated by the
                application’s controllers *@
                        <div class="col-4 col-sm-12 text-right">

                            @await Component.InvokeAsync("CartSummary")

                        </div>
                    </div>
                </div>

                @* Code for the navigation and body *@
                <div class="row m-1 p-1">
                    <div id="categories" class="col-lg-3 col-sm-12">
                        @await Component.InvokeAsync("NavigationMenu")
                    </div>
                    <div class="col-lg-9 col-sm-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
            
    </body>
</html>

