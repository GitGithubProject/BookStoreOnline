@model Product
@{
    ViewBag.Title = "Edit Product";
    Layout = "_AdminLayout";
}
<form enctype="multipart/form-data" asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="ProductID" />

    
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div><span asp-validation-for="Name" class="text-danger"></span></div>
            <input asp-for="Name" class="form-control" placeholder="Name" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div><span asp-validation-for="Description" class="text-danger"></span></div>
            <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Category" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div><span asp-validation-for="Category" class="text-danger"></span></div>
            <select asp-for="Category" class="custom-select mr-sm-3">
                <option value="">Please select</option>
                <option value="Algorithms">Algorithms</option>
                <option value="Database">Database</option>
                <option value="Programming">Programming</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div><span asp-validation-for="Price" class="text-danger"></span></div>
            <input asp-for="Price" class="form-control" />
        </div>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
